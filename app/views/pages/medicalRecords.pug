extends ../layout.pug

block content
	.container
		.row
			.col-md-4
				h1.bg-info Medical Records
		.row
			br
		.row
			br
		each item in records
			.panel.panel-success
				.panel-heading
					.row
						.col-md-2 
							h6 Doctor Last Name: #{item.doctorLastName}
						.col-md-2 
							h6 Doctor First Name: #{item.doctorFirstName}
						.col-md-2 
							h6 Hospital: #{item.hospital}
						.col-md-3
							h6 Create time:
						.col-md-3
							h6 Last modify time:
				.panel-body
					.row
						.col-md-2
							h5 Symptom:
						.col-md-10
							p.
								mock data
							hr.divider(style="width: 100%; color:black; height:1px;background-color:black;")
					.row
						.col-md-2
							h5 Inspection Items:
						.col-md-10
							p.
								mock data
							hr.divider(style="width: 100%; color:black; height:1px;background-color:black;")
					.row
						.col-md-2
							h5 Inspection Results:
						.col-md-10
							p.
								mock data
							hr.divider(style="width: 100%; color:black; height:1px;background-color:black;")
					.row
						.col-md-2
							h5 Diagnose: 
						.col-md-10
							p.
								mock data
							hr.divider(style="width: 100%; color:black; height:1px;background-color:black;")
					.row
						.col-md-2
							h5 Prescriptions:
						.col-md-10
							p.
								mock data
							hr.divider(style="width: 100%; color:black; height:1px;background-color:black;")



		
 
		
		

